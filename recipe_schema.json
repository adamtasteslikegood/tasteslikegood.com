{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recipe",
  "description": "Schema for a cooking recipe",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the recipe"
    },
    "description": {
      "type": "string",
      "description": "Short description of the recipe"
    },
    "prepTime": {
      "type": "integer",
      "description": "Preparation time in minutes"
    },
    "cookTime": {
      "type": "integer",
      "description": "Cooking time in minutes"
    },
    "servings": {
      "type": "integer",
      "description": "Number of servings the recipe yields"
    },
    "ingredients": {
      "type": "object",
      "description": "Ingredients grouped by type (wet, dry, etc.)",
      "properties": {
        "wet": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ingredient"
          }
        },
        "dry": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ingredient"
          }
        },
        "other": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ingredient"
          },
          "description": "Optional group for ingredients that don't fit in wet or dry"
        }
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/ingredient"
        }
      },
      "required": [
        "wet",
        "dry"
      ]
    },
    "instructions": {
      "type": "array",
      "description": "Ordered list of instructions",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "step": {
                "type": "integer",
                "minimum": 1,
                "description": "Step number in the sequence"
              },
              "description": {
                "type": "string",
                "description": "Instructional text for the step"
              }
            },
            "required": [
              "description"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "notes": {
      "type": "string",
      "description": "Optional notes, tips, or variations"
    },
    "tags": {
      "type": "array",
      "description": "Keywords or tags for searching and filtering",
      "items": {
        "type": "string"
      }
    },
    "image": {
      "type": "string",
      "format": "uri",
      "description": "Optional URL of an image of the finished dish"
    }
  },
  "required": [
    "name",
    "prepTime",
    "cookTime",
    "servings",
    "ingredients",
    "instructions"
  ],
  "definitions": {
    "ingredient": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the ingredient"
        },
        "amount": {
          "type": [
            "number",
            "array"
          ],
          "description": "Amount of the ingredient. Can be a single number or an array for a range.",
          "items": {
            "type": "number"
          }
        },
        "units": {
          "type": "string",
          "description": "Unit of measurement",
          "enum": [
            "cup",
            "cups",
            "tsp",
            "teaspoon",
            "teaspoons",
            "Tbs",
            "Tbsp",
            "tablespoon",
            "tablespoons",
            "oz",
            "ounce",
            "ounces",
            "g",
            "gram",
            "grams",
            "kg",
            "kilogram",
            "kilograms",
            "ml",
            "milliliter",
            "milliliters",
            "l",
            "liter",
            "liters",
            "qty",
            "pinch",
            "to taste"
          ]
        },
        "notes": {
          "type": "string",
          "description": "Optional preparation notes, such as chopped, sliced, etc."
        }
      },
      "required": [
        "name",
        "amount",
        "units"
      ]
    }
  }
}
